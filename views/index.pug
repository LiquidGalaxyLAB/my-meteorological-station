extends layout

block content
    script(src="/socket.io/socket.io.js")
    script(src="https://code.jquery.com/jquery-1.11.1.js")
    script.
        $(function () {
            var socket = io();
            socket.on('temperature', function (msg) {
                $('#temperature').text(msg);
            });
            socket.on('humidity', function (msg) {
                $('#humidity').text(msg);
            });
            socket.on('temperature2', function (msg) {
                $('#temperature2').text(msg);
            });
            socket.on('pressure', function (msg) {
                $('#pressure').text(msg);
            });
            socket.on('sealevel_pressure', function (msg) {
                $('#sealevel_pressure').text(msg);
            });
            socket.on('altitude', function (msg) {
                $('#altitude').text(msg);
            });
        });


    div.container
        div.jumbotron
            div(class='page-header')
                h1=title

            div(class='container')
                div(class='row')

                    div(class='col-md-2', align='center')
                        h4 TEMPERATURE
                        p(id='temperature') 0 *C
                    div(class='col-md-2', align='center')
                        h4 HUMIDITY
                        p(id='humidity') 0 %
                    div(class='col-md-2', align='center')
                        h4 TEMPERATURE2
                        p(id='temperature2') 0 *C
                    div(class='col-md-2', align='center')
                        h4 PRESSURE
                        p(id='pressure') 0 Pa
                    div(class='col-md-2', align='center')
                        h4 SEALEVEL PRESSURE
                        p(id='sealevel_pressure') 0 Pa
                    div(class='col-md-2', align='center')
                        h4 ALTITUDE
                        p(id='altitude') 0 m
