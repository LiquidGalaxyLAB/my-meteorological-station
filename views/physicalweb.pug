extends layout

block tab
    #header-row.mdl-layout__header-row



block content

    script.
        function setBHref() {
            const user = firebase.auth().currentUser.uid;
            if (user) {
                document.getElementById("managebtn").setAttribute("href", '/pw/manage?id=' + user);
            }
        }

    main.mdl-layout__content.mdl-color--grey-100
        .mdl-grid.demo-content

            .mdl-cell.mdl-cell--12-col.mdl-grid
                .mdl-cell.mdl-cell--1-col

                .mdl-cell.mdl-cell--4-col
                    a.demo-options.mdl-card.mdl-color--white.mdl-shadow--2dp.mdl-cell.mdl-cell--12-col.mdl-js-ripple-effect.mdl-button.mdl-js-button(href='/pw/new')
                        .mdl-card__supporting-text.mdl-color-text--blue-grey-800
                            center
                                i.material-icons.addbtn.mdl-color-text--blue-grey-800 add
                        .mdl-card__actions.mdl-card--border
                            center
                                p.mdl-color-text--blue-grey-800(style='margin-bottom: 0px;font-size: 16px') Create new beacon


                .mdl-cell.mdl-cell--1-col

                .mdl-cell.mdl-cell--4-col
                    a#managebtn.demo-options.mdl-card.mdl-color--white.mdl-shadow--2dp.mdl-cell.mdl-cell--12-col.mdl-js-ripple-effect.mdl-button.mdl-js-button(href='' onclick='setBHref()')
                        .mdl-card__supporting-text.mdl-color-text--blue-grey-800
                            center
                                i.material-icons.addbtn.mdl-color-text--blue-grey-800 edit
                        .mdl-card__actions.mdl-card--border
                            center
                                p.mdl-color-text--blue-grey-800(style='margin-bottom: 0px;font-size: 16px') Manage beacons

