script.
    $(function () {

        $('li').on('click', function () {
            $('#stations').val($(this).text());
            $('#btn').removeAttr('disabled ');
            $('#btn').addClass('mdl-color--blue-grey-800');
        });

        $('#form').submit(function () {

            const user = firebase.auth().currentUser.uid;

            if (user) {
                window.location = '/pw/url/' + user + '?name=' + $('#name').val() + '&station=' + $('#stations').val();
            }

            return false;


        });

    });