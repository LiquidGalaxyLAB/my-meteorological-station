<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2">
    <Document id="feat_5">
        <Style id="stylesel_0">
            <BalloonStyle>
                <bgColor>ffe6d8ad</bgColor>
                <displayMode>default</displayMode>
                <text>$[description]</text>
            </BalloonStyle>
        </Style>
        <% for(var i=0; i<data.length; i++) { %>
            <Placemark id="<%=data[i].name%>">
                <name>My meteorological station</name>
                <description><%=data[i].description%></description>
                <styleUrl>#stylesel_0</styleUrl>
                <gx:balloonVisibility>0</gx:balloonVisibility>
                <Point id="geom_2">
                    <coordinates><%=data[i].longitude%>,<%=data[i].latitude%>,0.0</coordinates>
                </Point>
            </Placemark>
        <% } %>
        <gx:Tour>
            <name>Show Balloon</name>
            <gx:Playlist>
            <% for(var i=0; i<data.length; i++) { %>
                <gx:FlyTo id="tour">
                    <gx:duration>3</gx:duration>
                    <gx:flyToMode>smooth</gx:flyToMode>
                    <Camera>
                        <longitude><%=data[i].longitude%></longitude>
                        <latitude><%=data[i].latitude%></latitude>
                        <altitude>10000</altitude>
                    </Camera>
                </gx:FlyTo>
                <gx:Wait>
                    <gx:duration>1</gx:duration>
                </gx:Wait>
                <gx:AnimatedUpdate id="tour_0">
                    <gx:duration>0.1</gx:duration>
                    <Update>
                        <targetHref/>
                        <Change>
                            <Placemark targetId="<%=data[i].name%>">
                                <visibility>1</visibility>
                                <gx:balloonVisibility>1</gx:balloonVisibility>
                            </Placemark>
                        </Change>
                    </Update>
                </gx:AnimatedUpdate>
            <% } %>
            </gx:Playlist>
        </gx:Tour>
    </Document>
</kml>